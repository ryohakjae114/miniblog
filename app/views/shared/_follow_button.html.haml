- unless current_user == user
  - if current_user.following?(user)
    = button_to t('.unfollow'), relationship_path(current_user.active_relationships.find_by(followed: user)),
                method: :delete,
                class: 'btn btn-outline-dark',
                form_class: 'd-inline-block ms-4'
  - else
    = link_to t('.follow'), relationships_path(followed_id: user), data: { turbo_method: :post }, class: 'btn btn-dark ms-4'
