- render_link_text ||= false
- picture_type ||= :thumb

.card.post
  .card-body.p-0.d-flex
    .w-100
      - if post.picture.attached?
        = image_tag post.picture.variant(picture_type), class: 'p-3'
      - if render_link_text
        = link_to post_path(post), class: 'd-block h-100 text-black text-decoration-none' do
          %p.h-100.fs-5.p-3= post.body
      - else
        .fs-5.p-3= post.body
    .p-3.text-nowrap
      .d-flex.justify-content-between.flex-column.h-100
        .d-flex.align-items-center
          = link_to user_path(post.user) do
            = image_tag post.user.avatar_icon, class: 'rounded-circle'
            = post.user.name
          = render 'shared/follow_button', user: post.user
        %div
          %p.m-3.text-end= l post.created_at
          .d-flex.align-items-center.me-4
            = render 'shared/like_button', post:
            .ms-2= t('.comments_count', count: post.comments_count)
