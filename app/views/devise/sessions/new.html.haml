%h2= t('devise.sessions.new.title')
= simple_form_for(resource, url: session_path(resource_name)) do |f|
  = f.input :name
  = f.input :password
  = f.input :remember_me, as: :boolean
  = f.button :submit

= link_to t('devise.registrations.new.title'), new_user_registration_path, class: 'd-block mt-4'
